/* pages/category/category.wxss */
.page-body {
  position: relative;
  background: #eee;
}

.side-bar {
  position: fixed;
  left: 0;
  top: 0;
  width: 122rpx;
  background: red;
}

.category-item {
  display: flex;
  justify-content: center;
  align-items: center;
  widows: 100%;
  height: 215rpx;
}

.category-title {
  width: 82rpx;
}

.active {
  background: greenyellow;
}

.page-content {
  padding-left: 122rpx;
  padding-top: 5rpx;
  display: flex;
  flex-flow: column;
}

.product-item {
  display: flex;
  /* background-color: aqua; */
}

.product-image {
  width: 274rpx;
  height: 274rpx;
  margin-left: 47rpx;
  flex-shrink: 0;
}

.product-description {
  margin-left: 30rpx;
  display: flex;
  flex-flow: column;
}
